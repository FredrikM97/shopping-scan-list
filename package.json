{
  "name": "grocery-scan-card",
  "type": "module",
  "version": "1.0.0",
  "description": "Home Assistant card for grocery scan management",
  "main": "src/grocery-scan-card.ts",
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
