  "license": "MIT",
  "dependencies": {
    "@kipk/load-ha-components": "^1.0.3",
    "home-assistant-js-websocket": "^9.5.0",
    "lit": "^3.3.1",
    "localforage": "^1.10.0",
    "quagga": "^0.6.16"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.15.0",
    "jsdom": "^21.1.0",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
